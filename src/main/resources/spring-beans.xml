<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="org.springframework.remoting.jaxws.SimpleJaxWsServiceExporter">
        <property name="baseAddress" value="http://localhost:8802/projet"></property>
    </bean>


    <bean id="projetService" class="com.projet.metier.ServiceRMImp">
        <!-- any additional properties, maybe a DAO? -->
    </bean>

    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
        <!-- does not necessarily have to be the same name as the bean to be exported -->
        <property name="serviceName" value="projetService"/>
        <property name="service" ref="projetService"/>
        <property name="serviceInterface" value="com.projet.metier.IMetierRMI"/>
        <!-- defaults to 1099 -->
        <property name="registryPort" value="1099"/>

    </bean>
</beans>
